@helper pup_window(string url, int width, int height, string top)
{
    int Top = 100;
    if (top != "")
    {
        Top = int.Parse(top);
    }
    @:var pURL = '@(url)'; pURL=pURL.replace(/&amp;/g,'&');
    @:new_window.push(window.open(pURL,'_blank','menubar=no,status=no,scrollbars=yes,top=@Top,left=200,toolbar=no,width=@width,height=@height'));
}

@helper show_hide(string showId, string hideId)
{
    @:$("#@showId").show();
    @:$("#@hideId").css("display", "none");
}
@helper show_hide_class(string showClass, string hideClass)
{
    @:$(".@showClass").show();
    @:$(".@hideClass").css("display", "none");
}
           
