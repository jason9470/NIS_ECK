                <div class="funcArea">
                    <input type="button" class="fun_btn add_btn" id="Add_Note" value="新增" onclick="OpenEditView('Note','@MasterID','')" />
                    <input type="button" class="fun_btn delete_btn" value="返回" onclick="if (confirm('確定返回?')) window.location.href = 'Index'" />
                </div>
