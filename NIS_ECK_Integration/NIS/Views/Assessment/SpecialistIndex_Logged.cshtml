<style type="text/css">
    input[type="button"] {
        height: 75%;
        width: 50%;
        font-weight: bold;
    }

    td {
        height: 25%;
        width: 50%;
    }
</style>

<script type="text/javascript">
    $(function () {
        $(window).resize(function () {
            var height = $(this).outerHeight();
            if (height <= 300)
                height = 450;
            $("table").outerHeight(height - 30);
        }).trigger("resize");
    });
</script>

