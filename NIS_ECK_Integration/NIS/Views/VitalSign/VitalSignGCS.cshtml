                @VitalSign_Helper.gcs_radio_item("(M)運動反射", "gc_r3", "(5分)對痛反應良好|(4分)對痛可稍許活動|(3分對痛呈肢體屈曲)|(2分)對痛呈肢體伸張|(1分)無反應", df_data1[2])
            </fieldset>
            break;
        case "嬰兒(出生-不足6個月)":
            <input type="hidden" name="gc_record" relate_field="gc_r1|gc_r2|gc_r3" value="" />
             <fieldset>
                <legend>昏迷指數</legend>
                @VitalSign_Helper.gcs_radio_item("(E)睜眼反射", "gc_r1", "(4分)自行睜眼|(3分)聽到聲音|(2分)痛刺激|(1分)無反應|(C)無法睜眼", df_data1[0])<hr />
                @VitalSign_Helper.gcs_radio_item("(V)語言反射", "gc_r2", "(3分)發出聲音|(2分)會哭|(1分)無反應|(T)氣切管|(A)失語症|(E)氣管內管", df_data1[1])<hr />
                @VitalSign_Helper.gcs_radio_item("(M)運動反射", "gc_r3", "(3分)肢體屈曲|(2分)肢體伸張|(1分)無反應", df_data1[2])
            </fieldset>
            break;       
        default:
            break;
    }
}