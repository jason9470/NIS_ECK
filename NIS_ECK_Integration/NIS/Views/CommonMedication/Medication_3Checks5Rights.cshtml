@using NIS.Data;
@{ 
    List<DRUG_EXECUTE> DRUG_EXEC = (List<DRUG_EXECUTE>)ViewData["drug_exec"];
}
<script type="text/javascript">
    $(document).ready(function () {
        //格行換色
        $('.dataArea2 tr:odd').css('background', '#ABC8E2');
        $('.dataArea2 tr:even').css('background', '#E1E6FA');
    });
</script>
<style type="text/css">
    .dataArea2 [type=button] {
        background-color: #9CB7CF;
        border: 2px solid #FFFFFF;
        border-radius: 5px;
        color: #000000;
        font-family: "微軟正黑體";
        font-size: 14px;
        padding: 2px 3px 2px 3px;
        box-shadow: 2px 2px 3px rgba(20%,20%,40%,0.5);
        cursor: pointer;
    }

    #Pn35 th {
        background: #99CCFF;
        text-align: center;
        vertical-align: middle;
        font-size: 11pt;
        border-color: #135e96;
        border-style: solid;
    }

    #Pn35 td {
        border-color: #135e96;
        border-style: solid;
    }

    #PnChecksRights{
        background-color:white;
    }
</style>

<h3 style="color:red">請再次確認以下醫囑執行紀錄的內容，若無誤則點選確定完成給藥作業，<br />如有疑慮藥品請勾選後點選完成則不會給藥。</h3>
   
<div id="Pn35" class="dataArea2">
    <input id="execflag" type="hidden" value="save" name="execflag" />
    <div style="overflow-y:scroll;height:280px">
        <table id="checkmed" border="1" cellpadding="2" cellspacing="0" >
            <tr>
                <th width="40" style="text-align:center">疑慮</th>
                <th width="280">醫&emsp;囑</th>
                <th width="70">使用劑量</th>
                <th width="50">途&emsp;徑</th>
                <th width="50">頻&emsp;次</th>
                <th width="140">執行時間[給藥時間]</th>
                <th width="120">覆核者</th>
                <th width="120">原因註記</th>
                <th width="120">備註</th>
            </tr>
            @if (DRUG_EXEC != null && DRUG_EXEC.Count > 0)
            {
                for (int i = 0; i < DRUG_EXEC.Count; i++)
                {
                    <tr>
                        <td style="text-align:center"><input type="checkbox" id="Chk_@i" name="Chk35" value="@(DRUG_EXEC[i].UD_SEQPK)" /></td>
                        <td>
                            <label id="desc_@i">@(DRUG_EXEC[i].MED_DESC)</label>

                        </td>
                        <td style="text-align:center">
                            <label id="dose_@i"> @(DRUG_EXEC[i].USE_DOSE)</label>
                        </td>
                        <td style="text-align:center">
                            <label id="way_@i"> @(DRUG_EXEC[i].UD_PATH)</label>
                        </td>
                        <td style="text-align:center">@(DRUG_EXEC[i].UD_CIR)</td>
                        <td>
                            @(DRUG_EXEC[i].EXEC_DATE)
                        </td>
                        <td>
                            @*//覆核者*@
                            @(DRUG_EXEC[i].CHECKER)
                        </td>
                        <td>
                            @(DRUG_EXEC[i].REASONTYPE)
                            @(DRUG_EXEC[i].REASON)
                        </td>
                        <td>
                            @(DRUG_EXEC[i].REMARK)
                        </td>
                        <td style="display:none">
                            <label id="medCode_@i"> @(DRUG_EXEC[i].MED_CODE)</label>
                        </td>
                        <td style="display:none">
                            <label id="medCount_@i"> @(DRUG_EXEC[i].DOSE_COUNT)</label>
                        </td>
                        <td style="display:none">
                            <label id="medType_@i"> @(DRUG_EXEC[i].DRUG_TYPE)</label>
                        </td>
                        <td style="display:none">
                            <label id="execTime_@i"> @(DRUG_EXEC[i].EXEC_DATE)</label>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <p style="text-align:center">
        <input type="button" value="確定" onclick="SaveMedData();" />&emsp;
        <input type="button" value="取消" onclick="$('#PnChecksRights').fadeOut(500); $('#block').hide();" />
    </p>
</div>
