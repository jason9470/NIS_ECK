                        @Html.CheckBox("ck_care_prevent_fall_3")
                        @Html.Label("ck_care_prevent_fall_3", "推(病)床高度調至最低")
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_prevent_fall_4")
                        @Html.Label("ck_care_prevent_fall_4", "圍上推(病)床雙側床欄")
                        @Html.CheckBox("ck_care_prevent_fall_5")
                        @Html.Label("ck_care_prevent_fall_5", "推(病)床輪煞車固定，床欄無鬆動故障")
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_prevent_fall_6")
                        @Html.Label("ck_care_prevent_fall_6", "教導病人或家屬呼叫鈴的使用方法")
                        @Html.CheckBox("ck_care_prevent_fall_7")
                        @Html.Label("ck_care_prevent_fall_7", "衛教病人或家屬防範跌倒意外之發生")
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_prevent_fall_8")
                        @Html.Label("ck_care_prevent_fall_8", "視需要協助病人下床活動或如廁")
                        @Html.CheckBox("ck_care_prevent_fall_9")
                        @Html.Label("ck_care_prevent_fall_9", "無家屬或照顧者陪伴，增加探視頻率")
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_prevent_fall_10")
                        @Html.Label("ck_care_prevent_fall_10", "躁動病人給予適當安全的約束")
                    </p>
                    <p>
                        @Html.Label("lab", "護理指導", new { @class = "subtitle" })
                        @Html.CheckBox("ck_care_care_edu_1")
