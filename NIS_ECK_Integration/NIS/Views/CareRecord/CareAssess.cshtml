                        @Html.Label("ck_care_pain_1", "疼痛強度：")
                        @Html.TextBox("txt_care_pain_1", "", new { style = "width:80px;", disabled = "disabled" }) 分
                        @Html.CheckBox("ck_care_pain_2")
                        @Html.Label("ck_care_pain_2", "困難疼痛評估：")
                        @Html.TextBox("txt_care_pain_2", "", new { style = "width:80px;", disabled = "disabled" }) 分
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_pain_3")
                        @Html.Label("ck_care_pain_3", "分數≧4分，已通知")
                        @Html.TextBox("txt_care_pain_3", "", new { style = "width:80px;", disabled = "disabled" }) 醫師處理
                        @Html.CheckBox("ck_care_pain_4")
                        @Html.Label("ck_care_pain_4", "介入措施：")
                        @Html.TextBox("txt_care_pain_4", "", new { style = "width:160px;", disabled = "disabled" })
                    </p>
                    <p>
                        @Html.Label("lab", "留觀原因", new { @class = "subtitle" })
                        @Html.CheckBox("ck_care_reason_1")
