@{
    //Layout = "~/Views/Layout/Main.cshtml";
    Layout = "~/Views/Layout/FormLayout.cshtml";
}

<style type="text/css">
    .tabArea .subtitle {
        width: 120px;
    }
    .tabArea p {
        height: 40px;
        border-bottom: 1px dashed #b9b9b9;
        text-align: left;
    }
</style>

<script type="text/javascript">
    $(function () {
        $(".tabArea").tabs({ active: 0 });
    });
    
    function able(id) {
        document.getElementById(id).disabled = false;
        document.getElementById(id).focus();
    }
    function enable(id) {
        document.getElementById(id).disabled = true;
    }
    function ckable(obj, txtid) {
        var ck = obj;
        if (ck.checked)
        { able(txtid); }
        else
        { enable(txtid); }
    }
</script>

<table border="0" cellpadding="0" cellspacing="0" style="width:100%;">
    <tr>
        <td style="padding-bottom:5px;text-align:center;">
            <div class="funcArea" >
                <input type="button" value="儲存" style="width:50px;" onclick="alert('儲存成功');window.close();" />
                <input type="button" value="取消" style="width:50px;" onclick="if(confirm('確認取消?'))window.close();" />
            </div>
        </td>
    </tr>
    <tr>
        <td style="padding:5px 0 5px 0;">
            <div class="tabArea">
                <ul>
                    <li><a href="#tabs1">留觀病人持續護理評估表</a></li>
                </ul>
                <div id="tabs1" class="tab">
                    <p>
                        @Html.Label("lab", "生命徵象", new { @class = "subtitle" })
