                        @Html.CheckBox("ck_care_reason_5")
                        @Html.Label("ck_care_reason_5", "準備接受急診手術者")
                        @Html.CheckBox("ck_care_reason_6")
                        @Html.Label("ck_care_reason_6", "病況穩定，等待轉院者")
                        @Html.CheckBox("ck_care_reason_7")
                        @Html.Label("ck_care_reason_7", "病情不穩定者")
