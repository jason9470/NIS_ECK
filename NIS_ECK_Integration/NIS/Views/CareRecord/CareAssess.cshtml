                        @Html.TextBox("txt_care_care_edu_3", "", new { style = "width:80px;", disabled = "disabled" })
                        @Html.Label("txt_care_care_edu_3", "衛教單張")
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_care_edu_4")
                        @Html.Label("ck_care_care_edu_4", "病情解釋及治療方針，由")
                        @Html.TextBox("txt_care_care_edu_4", "", new { style = "width:80px;", disabled = "disabled" }) 醫師解釋
                        @Html.CheckBox("ck_care_care_edu_5")
                        @Html.Label("ck_care_care_edu_5", "留觀注意事項(含環境介紹)")
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_care_edu_6")
                        @Html.Label("ck_care_care_edu_6", "藥物相關衛教及注意事項")
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_care_edu_7")
                        @Html.Label("ck_care_care_edu_7", "說明對象自我評值：")
                        @Html.CheckBox("ck_care_care_edu_7_1")
                        @Html.Label("ck_care_care_edu_7_1", "已完全瞭解")
                        @Html.CheckBox("ck_care_care_edu_7_2")
                        @Html.Label("ck_care_care_edu_7_2", "部分瞭解")
                        @Html.CheckBox("ck_care_care_edu_7_3")
                        @Html.Label("ck_care_care_edu_7_3", "完全不瞭解")
                    </p>
                    <p>
                        @Html.Label("lab", "約束照護", new { @class = "subtitle" })
                        @Html.CheckBox("ck_care_constraints_1", false, new { onclick = "$('care_constraints_2').fadeOut(500);" })
                        @Html.Label("ck_care_constraints_1", "無約束(以下免填)")
                        @Html.CheckBox("ck_care_constraints_2", false, new { onclick = "$('care_constraints_2').fadeIn(500);" })
                        @Html.Label("ck_care_constraints_2", "有約束，醫囑開立時間：")
                        <select id="sel_care_constraints_2_HH">
                            @for (int i = 0; i < 24; i++)
                            {
                                string time = Convert.ToDateTime("00:00").AddHours(i).ToString("HH");
                                if (time == DateTime.Now.ToString("HH"))
                                {
                                <option selected="selected">@time</option>
                                }
                                else
                                {
                                <option>@time</option>
                                }
                            }
                        </select>
                        時
                        <select id="sel_care_constraints_2_mm">
                            @for (int i = 0; i < 60; i++)
                            {
                                string time = Convert.ToDateTime("00:00").AddMinutes(i).ToString("mm");
                                if (time == DateTime.Now.ToString("mm"))
                                {
                                <option selected="selected">@time</option>
                                }
