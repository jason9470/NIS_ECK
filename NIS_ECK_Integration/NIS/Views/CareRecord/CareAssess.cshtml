                        @Html.TextBox("txt_care_vitalsign_1", "", new { style = "width:80px;" }) /
                        @Html.TextBox("txt_care_vitalsign_2", "", new { style = "width:80px;" }) /
                        @Html.TextBox("txt_care_vitalsign_3", "", new { style = "width:80px;" }) 
                    </p>
                    <p style="padding-left:130px;">
                        @Html.Label("txt_care_BP_1", "BP：")
                        @Html.TextBox("txt_care_BP_1", "", new { style = "width:80px;" }) /
                        @Html.TextBox("txt_care_BP_2", "", new { style = "width:80px;" }) mmHg
                    </p>
                    <p style="padding-left:130px;">
                        @Html.Label("txt_care_awareness_E", "意識狀態：")
                        E
