                        @Html.CheckBox("ck_care_reason_2")
                        @Html.Label("ck_care_reason_2", "等待檢查：")
                        @Html.TextBox("txt_care_reason_2", "", new { style = "width:160px;", disabled = "disabled" })
                    </p><p style="padding-left:130px;">
                        @Html.CheckBox("ck_care_reason_3")
                        @Html.Label("ck_care_reason_3", "等候住院：")
                        @Html.TextBox("txt_care_reason_3", "", new { style = "width:150px;", disabled = "disabled" }) 科別
                        @Html.CheckBox("ck_care_reason_4")
                        @Html.Label("ck_care_reason_4", "等候會診：")
                        @Html.TextBox("txt_care_reason_4", "", new { style = "width:150px;", disabled = "disabled" }) 科別
