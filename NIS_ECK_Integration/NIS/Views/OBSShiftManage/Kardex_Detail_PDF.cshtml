                    SwitchSubProject_Show(obj_.filter('.' + $(obj).attr('data-code')));
                break;
            case 'checkbox':
                var obj_ = $('#Content').find('.' + $(obj).attr('data-code'));
                if ($(obj).prop('checked'))
                    SwitchSubProject_Show(obj_);
                else
                    SwitchSubProject_Hide(obj_);
                break;
        }
