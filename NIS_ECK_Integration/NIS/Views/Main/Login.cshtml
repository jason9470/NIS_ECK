@using NIS.Data;
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    
    <!-- icon -->
    @if(NIS.Controllers.BaseController.debug_mode){
        <link href="~/Images/Icon/debug.ico" type="image/x-icon" rel="shortcut icon">
    }else{
        <link href="~/Images/Icon/webicon.ico" type="image/x-icon" rel="shortcut icon">
    }

    <!-- title -->
    <title>@(LanguagePack.SiteInfo.SiteName)</title>

    <!-- meta -->
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="@(LanguagePack.SiteInfo.SiteName)" />
    <meta name="author" content="MAYAMINER CO.,LTD." />
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="expires" content="-1" />

    <!-- css -->
    <link rel="stylesheet" type="text/css" href="~/Content/StyleSheet/basic_theme.css" />
    <link rel="stylesheet" href="~/Content/themes/base/jquery.ui.all.css" />

    <!-- javascript -->
    <script type="text/javascript" src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jQueryUI/jquery-ui-1.13.2.js"></script>
    <script type="text/javascript" src="~/Scripts/JSTool.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#userName").keypress(function (e) {
                var code = (e.keyCode ? e.keyCode : e.which);
                if (code == 13) {
                    $("#userPwd").focus();
                }
            });

            $("#userPwd").keypress(function (e) {
                var code = (e.keyCode ? e.keyCode : e.which);
                if (code == 13) {
                    $("#sendcheck").trigger('click')
                }
            });
            @if (Request["message"] != null)
            {
                @Html.Raw("showHint(\"" + Request["message"].ToString() + "\");");
            }
            
            @*@if(NIS.Controllers.BaseController.debug_mode){
                @:$("#sendcheck").trigger("click");
            }*@
            
            $("#userName").focus();
        });

        function check_id() {
            if ($.trim($("#userName").val()) != '') {
                if ($.trim($("#userPwd").val()) != '') {
                    $('form[name=logForm]').submit();
                }
                else
                    showHint('密碼未輸入!');
            }
            else
                showHint('帳號未輸入!');
        }

    </script>

</head>
<body>
    <div id="hintinfo"></div>
    <div class="loginPanel"></div>
    <div class="loginMain">
        <table border="0" width="1000" align="center">
            <tr>
                <td width="420" align="right" valign="middle">
                    <table border="0">
                        <tr>
                            <td height="100" align="left" valign="top">
                                <img src="~/Images/System/logo.png" border="0" />
                            </td>
                        </tr>
                        <tr>
                            <td align="left" valign="top">
                                <ul class="note">
                                    @{
                                        List<AnnouncmentItem> sa_list = (List<AnnouncmentItem>)ViewData["sa_list"];
                                        if(sa_list != null){
                                            for(int i=0; i<= sa_list.Count-1 ;i++){
                                                <li>@(sa_list[i].sa_desc)</li>
                                            }
                                        }
                                    }
                                </ul>
                            </td>
                        </tr>
                    </table>
                </td>
                <td width="5">
                    <hr class="vhr" size='200'>
                </td>
                <td align="left" valign="middle">
                    <form action="~/Main/LogCheck" id="logForm" method="post" name="logForm">
                        <table border="0" class="logPanel" width="250" align="left" style="table-layout: fixed; white-space: nowrap;">
                            <tr>
                                <td width="90" style="padding-left: 60px;">
                                    <label for="userName">登入帳號：</label></td>
                                <td>
                                    @{
                                        string name = string.Empty, pwd = string.Empty;
                                        if (NIS.Controllers.BaseController.debug_mode)
                                        {
                                            name = "MAYA"; //08661, 18661 ,09277 , 10323, 14391   MAYA
                                            pwd = "333595"; //09277,333595 ,333595 , 10323, TIM1024 333595
                                        }
                                    }
                                    <input id="userName" type="text" name="userName" maxlength="10" value="@(name)" /></td>
                                    
                            </tr>
                            <tr>
                                <td style="padding-left: 60px;">
                                    <label for="userPwd">登入密碼：</label></td>
                                <td>
                                    <input id="userPwd" type="password" name="userPwd" maxlength="8" value="@(pwd)" /></td>
                            </tr>
                            <tr height="14">
                                <td>&nbsp;</td>
                                <td>
                                    <label for="vilstr" title="@(ViewData["server_info"])" id="vilstyle">帳號密碼為登入HIS之帳號密碼</label>
                                </td>
                            </tr>
                            <tr height="14">
                                <td>&nbsp;</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <input type="button" id="sendcheck" value="Login" onclick="check_id();" />
                                </td>
                            </tr>
                        </table>
                    </form>
                </td>
            </tr>
        </table>
    </div>
    <div class="copyright">
        &copy; 2013 Mayaminer Technology Co., Ltd. All Rights Reserved.- Best viewed with：Internet Explorer9.0 & more then 1024x768 resolution.  
    </div>
</body>
</html>