@{
    ViewBag.Title = "Insulin_Set_reject";
}
<link type="text/css" rel="Stylesheet" href="~/Content/StyleSheet/style.css" />

<script src="~/Scripts/jquery-3.6.4.min.js" type="text/javascript"></script>

<script type="text/javascript">
    function ck(id) {
        var ck = document.getElementById(id);
        if (ck.checked)
            ck.checked = false;
        else
            ck.checked = true;
    }
</script>

<table border="1" style=" width:100%; height:100%;">
    <tr style="height:100%;">
        <td align="center" style=" width:40%;">
            <table border="0" cellpadding="0" cellspacing="0" style=" width:90%; height:100%">
                <tr><td style=" width:23%;">
                    <table border="1" width="100%" style=" height:80px;">
                        <tr><td>
                            <div onclick="ck('A');" style=" width:100%; height:100%; text-align: center; background-color: #FF0000";">
                                <span style="font-size: 18px">右上臂</span><br /><span style="font-size: 36px;">A</span>
                            </div>
                        </td></tr>
                    </table>
                </td><td style=" width:23%;">
                    &nbsp;
                </td><td style=" width:8%;">
                    &nbsp;
                </td><td style=" width:23%;">
                    &nbsp;
                </td><td style=" width:23%;">
                    <table border="1" width="100%" style=" height:80px;">
                        <tr><td>
                            <div onclick="ck('E');" style=" width:100%; height:100%; text-align: center;">
                                <span style="font-size: 18px">左上臂</span><br /><span style="font-size: 36px;">E</span>
                            </div>
                        </td></tr>
                    </table>
                </td></tr>

                <tr><td>
                    &nbsp;
                </td><td>
                    <table border="1" width="100%" style=" height:80px;">
                        <tr><td>
                            <div onclick="ck('B');" style=" width:100%; height:100%; text-align: center;">
                                <span style="font-size: 18px">右腹部</span><br /><span style="font-size: 36px;">B</span>
                            </div>
                        </td></tr>
                    </table>
                </td><td>
                    &nbsp;
                </td><td>
                    <table border="1" width="100%" style=" height:80px;">
                        <tr><td>
                            <div onclick="ck('F');" style=" width:100%; height:100%; text-align: center;">
                                <span style="font-size: 18px">左腹部</span><br /><span style="font-size: 36px;">F</span>
                            </div>
                        </td></tr>
                    </table>
                </td><td>
                    &nbsp;
                </td></tr>

                <tr><td>
                    &nbsp;
                </td><td>
                    <table border="1" width="100%" style=" height:80px;">
                        <tr><td>
                            <div onclick="ck('C');" style=" width:100%; height:100%; text-align: center;">
                                <span style="font-size: 18px">右大腿</span><br /><span style="font-size: 36px;">C</span>
                            </div>
                        </td></tr>
                    </table>
                </td><td>
                    &nbsp;
                </td><td>
                    <table border="1" width="100%" style=" height:80px;">
                        <tr><td>
                            <div onclick="ck('G');" style=" width:100%; height:100%; text-align: center;">
                                <span style="font-size: 18px">左大腿</span><br /><span style="font-size: 36px;">G</span>
                            </div>
                        </td></tr>
                    </table>
                </td><td>
                    &nbsp;
                </td></tr>
            </table>
        </td>
        <td align="center" style=" width:40%;">
            <table border="0" cellpadding="0" cellspacing="0" style=" width:90%; height:100%;">
                <tr><td colspan="5" style=" width:100%; height:40%"></td></tr>
                <tr><td style=" width:23%;">
                </td><td align="right" style=" width:23%; height:60%">
                    <table border="1" width="100%" style=" height:80px;">
                        <tr><td>
                            <div onclick="ck('H');" style=" width:100%; height:100%; text-align: center;">
                                <span style="font-size: 18px">左臂</span><br /><span style="font-size: 36px;">H</span>
                            </div>
                        </td></tr>
                    </table>
                </td><td style=" width:8%;">
                </td><td style=" width:23%;">
                    <table border="1" width="100%" style=" height:80px;">
                        <tr><td>
                            <div onclick="ck('D');" style=" width:100%; height:100%; text-align: center; background-color: #9933FF;">
                                <span style="font-size: 18px">右臂</span><br /><span style="font-size: 36px;">D</span>
                            </div>
                        </td></tr>
                    </table>
                </td><td style=" width:23%;">
                </td></tr>
            </table>
        </td>
        <td style=" width:20%;">
            <div class="data_area" style=" height:inherit">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td style="font-size: 12px; text-align: center; background-color: #FF0000">@Html.Label("lab","禁忌顏色")</td>
                        <td style="font-size: 12px; text-align: center; background-color: #9933FF">@Html.Label("lab","拒打顏色")</td>
                    </tr>
                    <tr><th align="center" colspan="2">@Html.Label("lab","前")</th></tr>
                    <tr><th align="center">@Html.Label("lab","右")</th><th align="center">@Html.Label("lab","左")</th></tr>
                    <tr>
                        <td style=" text-align:center">
                            @Html.CheckBox("A")@Html.Label("A","A")
                        </td>
                        <td style=" text-align:center">
                            @Html.CheckBox("E")@Html.Label("E","E")
                        </td>
                    </tr>
                    <tr>
                        <td style=" text-align:center">
                            @Html.CheckBox("B")@Html.Label("B","B")
                        </td>
                        <td style=" text-align:center">
                            @Html.CheckBox("F")@Html.Label("F","F")
                        </td>
                    </tr>
                    <tr>
                        <td style=" text-align:center">
                            @Html.CheckBox("C")@Html.Label("C","C")
                        </td>
                        <td style=" text-align:center">
                            @Html.CheckBox("G")@Html.Label("G","G")
                        </td>
                    </tr>
                    <tr><th align="center" colspan="2">@Html.Label("lab","後")</th></tr>
                    <tr><th align="center">@Html.Label("lab","左")</th><th align="center">@Html.Label("lab","右")</th></tr>
                    <tr>
                        <td style=" text-align:center">
                            @Html.CheckBox("H")@Html.Label("H", "H")
                        </td>
                        <td style=" text-align:center">
                            @Html.CheckBox("D")@Html.Label("D","D")
                        </td>
                    </tr>
                    <tr><td colspan="2" style="font-size: 12px; text-align:center">
                        @Html.RadioButton("rb", "0", new { id = "rd_ban", onclick = @Java_funcion.show_hide("body", "") })
                        @Html.Label("rd_ban", "禁忌")
                        @Html.RadioButton("rb", "1", new { id = "rd_refuse", onclick = @Java_funcion.show_hide("", "body") })
                        @Html.Label("rd_refuse", "拒打")
                    </td></tr>
                    <tr><td colspan="2" style="font-size: 12px;">
                        <div id="body" style="display:none;">
                            @Html.Label("txtban","原因：")
                            @Html.TextBox("txtban","",new { style="width:100"})
                        </div>
                    </td></tr>
                    <tr><td colspan="2" style=" text-align:center">
                        <input id="save" type="button" class="btn_m" value="存檔" onclick="alert('儲存成功!');window.close();" />
                    </td></tr>
                </table>
            </div>
        </td>
    </tr>
    <tr style=" height:20%;">
        <td colspan="3" style=" width:100%;">
            <div class="data_area" style=" height:inherit">
                <table border="0" cellpadding="0" cellspacing="0" style=" width:100%;">
                    <tr><th>
                        @Html.Label("lab","最後設定日期")
                    </th><th>
                        @Html.Label("lab","時間")
                    </th><th>
                        @Html.Label("lab","禁忌部位")
                    </th><th>
                        @Html.Label("lab", "禁忌原因")
                    </th><th>
                        @Html.Label("lab", "拒打部位")
                    </th><th>
                        @Html.Label("lab", "設定者")
                    </th></tr>
                    <tr><td>
                        &nbsp;
                    </td><td>
                        &nbsp;
                    </td><td>
                        &nbsp;
                    </td><td>
                        &nbsp;
                    </td><td>
                        &nbsp;
                    </td><td>
                        &nbsp;
                    </td></tr>
                </table>
            </div>
        </td>
    </tr>
</table>
