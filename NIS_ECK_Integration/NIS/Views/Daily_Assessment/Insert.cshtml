@{
    //Layout = "~/Views/Layout/Main.cshtml";
    Layout = "~/Views/Layout/FormLayout.cshtml";
}

<style type="text/css">
    .tabArea .subtitle {
        font-weight: bolder;
        background-color: #D9D9D9;
        display: inline-block;
        width: 160px;
        height: 24px;
        text-align: center;
        font-size: 16px;
        font-family: Arial, '新細明體', EUDC;
    }
    .tabArea p {
        height: 40px;
        border-bottom: 1px dashed #b9b9b9;
        text-align: left;
    }
</style>

<script type="text/javascript">
    $(function () {
        $(".tabArea").tabs({ active: 0 });
        // inital tooltip
        $(".tooltip").tooltip({
            content: function () {
                return $(this).attr('title');
            }
        });
    });

    function change() {
        if ($('#select_key').val() == '1') {
            window.location.href = "Insert";
        }
        else if ($('#select_key').val() == '2') {
            window.location.href = "Mood";
        }
        else if ($('#select_key').val() == '3') {
            window.location.href = "Body";
        }
        else if ($('#select_key').val() == '4') {
            window.location.href = "Conventional";
        }
    }

    function able(id) {
        document.getElementById(id).disabled = false;
        document.getElementById(id).focus();
    }
    function enable(id) {
        document.getElementById(id).disabled = true;
    }
    function ckable(obj, txtid) {
        var ck = obj;
        if (ck.checked)
        { able(txtid); }
        else
        { enable(txtid); }
    }

    function clonediv(divid,btnid) {
        //取得屬性值
        var countid = parseInt($('#' + divid).attr("countid")) + 1;
        var copyPart = $('#' + divid).clone();     //複製一份
        $('#' + divid).attr("countid", countid);  //修改id
        $(copyPart).attr('id', divid + '_' + countid);
        //修改按鈕id,name,value,bind click事件
        $('#' + btnid, copyPart)
                .attr('id', divid + 'btnDel' + countid)
                .attr('src', '../Images/minus.png')
                .attr('title', '刪除')
                .attr('alt', '刪除')
                .attr('delid', divid + '_' + countid);
        //修改checkbox的名稱&清空值
        $('input[type=checkbox]', copyPart).each(function (i) {
            $(this).attr('id', $(this).attr('id') + '_' + countid);
            $(this).attr('name', $(this).attr('name') + '_' + countid);
            $(this).attr('checked', false);
        });
        //修改Textbox的名稱&清空值
        $('input[type=text]', copyPart).each(function (i) {
            $(this).attr('id', $(this).attr('id') + '_' + countid);
            $(this).attr('name', $(this).attr('name') + '_' + countid);
            $(this).val('');
        });
        //修改Label的名稱
        $('label', copyPart).each(function (i) {
            $(this).attr('for', $(this).attr('for') + '_' + countid);
        });
        $('select', copyPart).attr('id', $(this).attr('id') + '_' + countid)     //加入複製出來的項目
        $('#' + divid + '_clone').append(copyPart);
        document.getElementById(divid + 'btnDel' + countid).setAttribute('onclick', 'colDel(this)');
    }

    function colDel(obj) {
        var delid = $(obj).attr('delid');
        $('#' + delid).remove();
    }
</script>

<table border="0" cellpadding="0" cellspacing="0" style="width:100%;">
    <tr>
        <td style="padding-bottom:5px;">
            <div class="funcArea">
                <select id="select_key" onchange="change();">
                    <option value="1" selected="selected">ICU</option>
                    <option value="2">心情溫度計</option>
                    <option value="3">身體評估</option>
                    <option value="4">大小夜常規評估</option>
                </select>
                <input type="button" value="儲存" style="width:50px;" onclick="alert('儲存成功')" />
            </div>
        </td>
    </tr>
    <tr>
        <td style="padding:5px 0 5px 0;">
            <div class="tabArea">
                <ul>
                    <li><a href="#tabs1">生命微象</a></li>
                    <li><a href="#tabs2">身體評估/營養評估</a></li>
                    <li><a href="#tabs3">導管評估</a></li>
                    <li><a href="#tabs4">引流管評估</a></li>
                </ul>
                <div id="tabs1" class="tab">
                    @Html.Partial("VitalSign")
                </div>
                <div id="tabs2" class="tab">
                    @Html.Partial("BodyAssess")
                </div>
                <div id="tabs3" class="tab">
                    @Html.Partial("TubeAssess")
                </div>
                <div id="tabs4" class="tab">
                    @Html.Partial("EVD_TubeAssess")
                </div>
            </div>        
        </td>
    </tr>
</table>
